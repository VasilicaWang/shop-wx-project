.sidebar {
  float: left;
}
.details {
  overflow: hidden;
}
.details .cate-title {
  text-align: center;
  font-size: 16px;
  margin: 20rpx 0;
}
.details .content {
  display: flex;
  flex-wrap: wrap;
}
.details .content .item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  font-size: 14px;
  margin-bottom: 20rpx;
  color: #666;
}
.details .content .item image {
  width: 80%;
  height: 160rpx;
}

