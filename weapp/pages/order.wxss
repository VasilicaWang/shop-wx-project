.order-list {
  background-color: #f9f9f9;
  margin: 20rpx 0 100rpx;
}
.order-list-item {
  display: flex;
  margin-top: 20rpx;
  background-color: #fff;
}
.order-list-item .order-list-item-in {
  padding: 20rpx 20rpx 0;
}
.order-list-item .order-list-item-in .order-list-item-in:last-child {
  padding-bottom: 120rpx;
}
.order-list-item .order-list-item-in .order-list-item-in:last-child > .order-goods-info {
  border: none;
}
.order-list-item .order-list-item-in .order-subprice {
  height: 65rpx;
  font-size: 12px;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-bottom: 1px solid #eee;
  color: #999;
}
.order-list-item .order-list-item-in .order-number {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  height: 65rpx;
  align-items: center;
}
.order-list-item .order-list-item-in .order-number .order-status {
  border: 1px solid #ccc;
  color: #ff2d4a;
  padding: 3px 8px;
}
.order-list-item .order-goods-status {
  width: 60rpx;
  align-self: center;
}
.order-list-item .order-goods-info {
  flex: 1;
  display: flex;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}
.order-list-item .order-goods-info image {
  align-self: center;
  width: 150rpx;
  height: 150rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}
.order-list-item .order-goods-info .goods-info-box {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100%;
}
.order-list-item .order-goods-info .goods-info-box .goods-title {
  font-size: 14px;
  margin-bottom: 20rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.order-list-item .order-goods-info .goods-info-box .info-box-bottom {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  line-height: 60rpx;
}
.order-list-item .order-goods-info .goods-info-box .info-box-bottom .goods-price {
  color: #ff2d4a;
  font-size: 16px;
}
.order-list-item .order-goods-info .goods-info-box .info-box-bottom .count-add,
.order-list-item .order-goods-info .goods-info-box .info-box-bottom .count-minus {
  display: inline-block;
  text-align: center;
  border: 1px solid #666666;
  height: 60rpx;
  width: 60rpx;
  box-sizing: border-box;
}
.order-list-item .order-goods-info .goods-info-box .info-box-bottom .count {
  font-size: 14px;
  margin: 0 20rpx;
  height: 60rpx;
  width: 60rpx;
}
.order-list-item .delGoods {
  background-color: #ff2d4a;
  color: #fff;
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 16px;
  padding: 0 20rpx;
}
.order-none-in {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}
.order-none-in .van-icon {
  margin-bottom: 20rpx;
}

