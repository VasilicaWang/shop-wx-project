.address {
  min-height: 100vh;
  background-color: #fafafa;
}
.address-body {
  padding: 20rpx;
}
.address-body .empty-address {
  height: 60px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.address-body .empty-address .add-btn {
  padding: 20rpx 30rpx;
  background: #a7a6a7;
  color: white;
  border-radius: 4px;
  font-size: 16px;
}
.address-body .address-item {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border: 1px solid #f9f9f9;
  border-radius: 10rpx;
  margin: 10rpx 0;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}
.address-body .address-item .address-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.address-body .address-item .address-title {
  font-size: 14px;
  margin-bottom: 10rpx;
}
.address-body .address-item .address-title .address-uname {
  font-weight: 600;
}
.address-body .address-item .address-title .address-detail {
  font-size: 14px;
}

