.isLogin {
  background-color: #ff2d4a;
}
.isLogin .login-false {
  height: 400rpx;
  display: flex;
  align-items: center;
}
.isLogin .login-false .lf-in {
  color: #fff;
  width: 100%;
}
.isLogin .login-false .lf-in .lf-top {
  display: flex;
  justify-content: center;
}
.isLogin .login-false .lf-in .lf-top .lf-avatar {
  margin: 0 70rpx;
}
.isLogin .login-false .lf-in .lf-top .lf-avatar .lf-avatar-in {
  width: 120rpx;
  height: 120rpx;
  box-sizing: border-box;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #fff;
}
.isLogin .login-false .lf-in .lf-top .lf-avatar .lf-avatar-in image {
  width: 100%;
  height: 100%;
}
.isLogin .login-false .lf-in .lf-bottom {
  width: 100%;
  text-align: center;
  margin-top: 20rpx;
}
.isLogin .login-false .lf-in .lf-bottom button {
  background-color: transparent;
  color: #fff;
  font-size: 16px;
}
.isLogin .login-false .lf-in .lf-bottom button::after {
  border: 0;
}

